{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["./node_modules"]
}
